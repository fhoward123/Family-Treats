<!DOCTYPE html>
<html>
  <head>
      <% include ../../partials/head.ejs %>
  </head>
  <body>
    <nav>
        <% include ../../partials/nav.ejs %>
    </nav>
    <div class="container">
      <h2><%= recipe.name  %></h2>
        <div class="jumbo">
            <img src="<%= recipe.image %>" alt="An image of <%= recipe.name %>" class="jumbo-img" />
            <p><%=recipe.description %></p>
        </div>
        <div class="admin-actions">
          <a href="/recipes/<%=recipe.id%>/edit"><button type="button" name="button" class="edit-button">Edit</button></a>
          <form action="/recipes/<%=recipe.id%>?_method=DELETE" method="POST">
            <button class="delete-button">DELETE</button>
          </form>
        </div>
    </div>
    <% include ../../partials/footer.ejs %>
  </body>
</html>
